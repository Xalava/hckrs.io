@import 'nib'

#hacker {
  
  #mapWrapper {
    width: 200px;
    height: 200px;
    #map {
      position: relative;
      z-index: 10;
      width: inherit;
      height: inherit;
    }
  }
  
  
  #profilePicture {
    position: relative;
    .picture {
      width: 160px;
      height: 160px;
      border-radius: 80px;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }
    div.current-picture {
      position: relative;
      width: 160px;
      height: 160px;
      cursor: pointer;
      .change {
        display: none;
        position: absolute;
        top: 0px;
        left: 0px;
        z-index: 2;
        width: 100%;
        text-align: center;
        color: white;
        margin-top: 50px;
      }
      &:hover {
        .change {
          display: block;
        }
        .picture {
          -webkit-filter: blur(2px) brightness(0.7);
          -moz-filter: blur(2px) brightness(0.7);
          -o-filter: blur(2px) brightness(0.7);
          -ms-filter: blur(2px) brightness(0.7);
        }
      }
    }
    div.picture-choser {
      display: none;
      position: fixed;
      top: 0px;
      left: 0px;
      margin: auto;
      z-index: 11;
      background-color: rgba(0,0,0,0.8);
      padding: auto;
      label {
        float: left;
        text-align: center;
        color: #CCC;
      }
      .label-text {
        margin-top: 8px;
      }
    }
    div.picture-choser.show {
      display: block;
    }
  }


  A.profile-social-active{
    padding: 7px 12px 8px 4px;
    background-color: rgba(92,128,5,0.8);
    border: 0px;
    margin: 0px;
    line-height:24px;
    color:#384422;
    font-weight:700;
    border:1px solid #85a352;
    margin-right: 6px;
 }
  A.profile-social-active:hover{
    color:#FFF;
    background-color: rgba(202,82,35,0.8);
    border:1px solid #d67b59;
  }
  IMG.profile-social-active-icon{
    height:24px;
    vertical-align:middle;
  }

  A.profile-social-inactive{
    padding: 7px 12px 8px 12px;
    background-color: rgba(202,82,35,0.8);
    border: 0px;
    margin: 0px;
    line-height:24px;
    color:#dadada;
    font-weight:700;
    border:1px solid #d67b59;
    margin-right: 6px;
  }
  A.profile-social-inactive:hover{
    color:#FFF;
    background-color: rgba(92,128,5,0.8);
    border:1px solid #85a352;
  }
  IMG.profile-social-inactive-icon{
    height:10px;
    vertical-align:middle;
    padding-right: 6px;
  }

}