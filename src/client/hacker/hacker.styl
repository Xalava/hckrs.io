@import 'nib'

#hacker {
  
  #mapWrapper {
    width: 200px;
    height: 200px;
    #map {
      position: relative;
      z-index: 10;
      width: inherit;
      height: inherit;
    }
  }
  
  
  #profilePicture {
    position: relative;
    .picture {
      width: 160px;
      height: 160px;
      border-radius: 80px;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    }
    div.current-picture {
      position: relative;
      width: 160px;
      height: 160px;
      cursor: pointer;
      .change {
        display: none;
        position: absolute;
        top: 0px;
        left: 0px;
        z-index: 2;
        width: 100%;
        text-align: center;
        color: white;
        margin-top: 50px;
      }
      &:hover {
        .change {
          display: block;
        }
        .picture {
          -webkit-filter: blur(2px) brightness(0.7);
          -moz-filter: blur(2px) brightness(0.7);
          -o-filter: blur(2px) brightness(0.7);
          -ms-filter: blur(2px) brightness(0.7);
        }
      }
    }
    div.picture-choser {
      display: none;
      position: fixed;
      top: 0px;
      left: 0px;
      margin: auto;
      z-index: 11;
      background-color: rgba(0,0,0,0.8);
      padding: auto;
      label {
        float: left;
        text-align: center;
        color: #CCC;
      }
      .label-text {
        margin-top: 8px;
      }
    }
    div.picture-choser.show {
      display: block;
    }
  }


  div.profile-social-container{
    padding: 8px;
    background-color: rgba(255,255,255,0.2);
    border: 1px solid green;
    border-radius:4px;
  }
  A.profile-social-active{
    padding: 8px;
    background-color: rgba(92,128,5,0.8);
    border: 0px;
    margin: 0px;
  }

}