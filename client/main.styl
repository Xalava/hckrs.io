/* INPUT ELEMENTS */

input.text {
  background: transparent;
  border: 1px dashed transparent;
  box-shadow: none;
  border-radius: 15px;
  padding: 3px 10px;
  color: white;
  margin-left: -11px;
  margin-top: -5px;
  transition: none;
}
input.text:hover {
  border: 1px solid rgba(0,0,0,0);
  background-color: rgba(255,255,255,0.1);
}
input.text:focus {
  border: 1px solid rgba(0,0,0,0);
  background-color: rgba(255,255,255,0.2);
  box-shadow: none;
}
input.text.saved {
  background-color: rgba(255,255,255,0.1);
  border: 1px solid rgba(0,0,0,0);
  color: #ffea87;
}
input.text.invalid {
  border-color: orange;
}
input.text::-webkit-input-placeholder { /* WebKit browsers */ color: #bbb; }
input.text:-moz-placeholder { /* Mozilla Firefox 4 to 18 */ color: #bbb; }
input.text::-moz-placeholder { /* Mozilla Firefox 19+ */ color: #bbb; }
input.text:-ms-input-placeholder { /* Internet Explorer 10+ */ color: #bbb; }

