/* page transition effects on outer most div containing the current page */

#mainWrapper > .route-transition {
  transition: transform 0.8s ease-out, opacity 0.7s ease-out;
  transform: scale(0.7);
  opacity: 0.01;
  &.activated {
    transform: scale(1.0);
    opacity: 1.0;
  }
}


/* HEADER */

$headerHeight = 105px;

#header {
  width: 100%;
  height: $headerHeight;
  overflow: visible;
  position: relative;
  z-index: 2;

  .floating {
    position: fixed;
    top: 0px;
    left: 0px;
    
    width: 100%;
    height: $headerHeight;

    .background {
      position: absolute;
      z-index: 2;
      left: 0px;
      top: 0px;
      width: 100%;
      height: $headerHeight;
      background-color: rgba(0,0,0,0.4);
    }

    .content {
      position: relative;
      z-index: 3;
      padding: $pagePaddingHeight $pagePaddingWidth;
    }

    .logo-small {
      float: left;
      height: 63px;
      width: 190px;
      background-image: url('/img/logo-inversed.svg');  
    }
  }

  /* transition */
  transition: height 0.4s 0s ease-out;
  .floating {
    transition: transform 0.4s 0.4s ease-out;
    transform: translateY(-($headerHeight));
    .background {
      transition: background-color 0.7s 0.4s ease-out;
    }
  }
  &.active {
    .floating {
      transform: translateY(0px)
    }
  }

}

#header.fixed {
  height: 0px;
}





