/* HACKER */

.picture {
  max-width: 200px;
}

.hacker{
  float:left;
  width: 260px;
  margin-bottom: 28px;
  text-align: center;
}

/* HACKERS LIST */

.pictureView {
  position: relative;
  width: 180px;
  height: 180px;
  border-radius: 90px;
  background-position: center; 
  background-size: cover;
  color: white;
  margin: auto;
}

.hackers-name{
  font-weight: 400;
  color: #FFF;
  font-size: 130%;
  line-height: 48px;
}

#invitations .invite {
  padding-right: 5px;
}



/* INPUT ELEMENTS */

input.text {
  background: transparent;
  border: 1px dashed transparent;
  box-shadow: none;
  border-radius: 15px;
  padding: 3px 10px;
  color: white;
  margin-left: -11px;
  margin-top: -5px;
  transition: none;
}
input.text:hover {
  border-color: white;
  background-color: rgba(255,255,255,0.1);
}
input.text:focus {
  border-style: solid;
  border-color: white;
  background-color: rgba(255,255,255,0.1);
}
input.text.saved {
  border-color: #aaeeaa;
  background-color: rgba(64,163,195,0.2);
  border: 1px solid rgba(255,255,255,0.5);
}
input.text.invalid {
  border-color: orange;
}
input.text::-webkit-input-placeholder { /* WebKit browsers */ color: #bbb; }
input.text:-moz-placeholder { /* Mozilla Firefox 4 to 18 */ color: #bbb; }
input.text::-moz-placeholder { /* Mozilla Firefox 19+ */ color: #bbb; }
input.text:-ms-input-placeholder { /* Internet Explorer 10+ */ color: #bbb; }

label.checkbox{
  float: left;
  margin-right: 32px;
  padding-top: 5px;
  font-weight: 100;
  color: white;
  text-shadow: 1px 1px 1px #777;
}

.change{
  line-height: 60px;
}

.imputPictureRadio{
  visibility: hidden;
}


