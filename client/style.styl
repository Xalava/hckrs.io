@import 'nib'

$pagePaddingHeight = 20px;
$pagePaddingWidth = 40px;


html {
  height: 100%;
}

body {
  background: #84a3c0;
  font-family: 'open sans';
  position: relative;
  margin: 0;
  padding: 0px;
  height: 100%;
  -webkit-font-smoothing: antialiased;
  background-size: cover;
  background-attachment:fixed;
  color: white; 
}

.clear {
  clear: both;
}


/* wrapper around all */

.wrapper {
	height: 100% !important;
	height: 100%;
	margin: 0 auto; 

  & > .main { /* nested exactly 1 level lower */
    float: left;
    width: 100%;
    height: auto;
    margin: 0 auto;
  
    & > .content{  /* nested exactly 1 level lower */
      height: auto;
    }
  }
}

.page {
  padding: $pagePaddingHeight $pagePaddingWidth; 
}
.page-space {
  height: 100px;
}



/* text links */

a {
  text-decoration: none;
  color: #FFF;
  margin: 0px 2px 0px 2px;
}

a:hover{
  text-decoration: none;
  color: #1466a8;
  /*border-bottom: 2px dotted #1466a8;
  margin-bottom: -5px;*/
}

a img {
  text-decoration: none;
  border:0px;
}



/* bootstrap alerts */

.alert h1 {
  font-size: 26px;
  margin-top: 5px;
  margin-bottom: 5px;
}
.alert p {
  line-height: 23px;
}

.main-alerts {
  .alert {
    width: 550px;
    margin-left: 200px;
  }
}



/* HEADER */


.header {
  margin: 0 auto;
  width: 100%;

  .content {
    margin: $pagePaddingHeight $pagePaddingWidth;
  }
}

.header.absolute {
  position: absolute;
  margin: 0px;
  top: 0px;
  left: 0px;
  z-index: 2; 
  background-color: rgba(0,0,0,0.4);
}

.logo-small{
  float: left;
  height: 63px;
  width: 190px;
  background-image: url('/img/logo.svg');

}

.header.inversed {
  .logo-small {
    float: left;
    height: 63px;
    width: 190px;
    background-image: url('/img/logo-inversed.svg');  
  } 
}

/* menu */

.menu{
  float: left;
  padding-top: 24px;
  padding-left: 48px;
  font-size: 18px;
  font-weight: 700;
}

a.menu {
  text-decoration: none;
  color: #222;
  margin: 0px;
  padding: 0px 8px 0px 8px;
  float: none;
}

a.menu:hover{
  text-decoration: none;
  color: #1466a8;
  /*border-bottom: 2px dotted #1466a8;
  margin-bottom: -5px;*/
}

.inversed a.menu {
  color: #eee; 
}
.inversed a.menu:hover {
  color: #fff; 
}

/* user menu */

.header {

  .right {
    position: absolute;
    right: $pagePaddingWidth;
    top: 0px;
  }

  .pictureViewSmall {
    position: relative;
    width: 64px;
    height: 64px;
    margin: 0px;
    padding: 0px;
    border-radius: 32px;
    background-position: center; 
    background-size: cover;
    text-align: center;
    color: white;
    margin: auto;
  }

  .pull-right{
    float: right;
  }

  .dropdown-toggle{
    float: right;
    font-size: 2em;
  }

  .dropdown-menu{
    margin-top: -13px;
  }

  .icon-user, .icon-remove, .icon-gift{
    margin-top: 3px;
  }

}








/* FRONTPAGE */

#frontpage h1, 
#frontpage h2 {
  width: 100%;
  float: left;
}
#frontpage h1 {
  color: #FFF;
  margin-bottom: 5px;
  font-size: 60px;
  letter-spacing: 0px;
  font-weight: 100;
  line-height: 140%;
}
#frontpage h2 {
  color: #6D461D;
  font-weight: 400;
  margin-top: 0;
  margin-bottom: 10px;
}

#frontpage {
  text-align: center;
  margin-top: 60px;
}

#cursor{
