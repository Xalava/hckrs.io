@import 'nib'

#highlights {
  transition: opacity 400ms;

  .photo {
    position: absolute;
    width: 100%;
    height: 100%;
    background-position: 50% 50%;
    background-size: cover;
  }

  .details {
    position: absolute;
    right: 0px; 
    bottom: 20%;
    padding: 20px;
    padding-right: 50px;
    background-color: rgba(0,0,0,0.5);
    min-width: 200px;
    max-width: 40%;

    .title, .subtitle {
      display: block;
      line-height: 1.1em;
    }
    .title {
      font-size: 2em;
    }
    .subtitle {
      font-size: 1.5em;
    }
    .description {
      margin-top: 15px;
    }
  }
  
}