@import 'nib'

#highlights {
  overflow: hidden;
  width: 100%;
  height: 100%;


  img.up, img.down{
    height: 30px;
    width: 55px;
    padding: 24px;
  }

  a.up, a.down {
    margin: auto;
    left: 50%;
    right: 50%;
    position: absolute;
    z-index: 1000000;
    cursor: pointer;
    margin-left: -48px;
    border: rgba(0,0,0,0); 
  }

  a.up{
    top: 100px;
  }

  a.down{
    bottom: 0px;
  }

  .photo {
    position: absolute;
    width: 100%;
    height: 100%;
    background-position: 50% 50%;
    background-size: cover;
  }

  .details {
    position: absolute;
    right: 0px; 
    bottom: 20%;
    padding: 20px;
    padding-right: 50px;
    background-color: rgba(0,0,0,0.5);
    min-width: 300px;
    max-width: 40%;

    .title, .subtitle {
      display: block;
      line-height: 1.1em;
    }
    .title {
      font-size: 2em;
      font-weight: bold;
    }
    .subtitle {
      font-size: 2em;
      line-height: 1.5em;
      margin-top: 4px;
    }
    .description {
    }

    .user {
      margin: 20px 0px;
    }
    .pictureView {
      float: left;
      margin-right: 5px;
    }
  }
  
}