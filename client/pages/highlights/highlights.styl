@import 'nib'

#highlights {
  overflow: hidden;
  width: 100%;
  height: 100%;


  img.up, img.down{
    height: 30px;
    width: 55px;
    padding: 24px;
  }

  a.up, a.down {
    margin: auto;
    left: 50%;
    right: 50%;
    position: absolute;
    z-index: 1000000;
    cursor: pointer;
    margin-left: -48px;
    border: rgba(0,0,0,0); 
  }

  a.up{
    top: 100px;
  }

  a.down{
    bottom: 0px;
  }

  .photo {
    position: absolute;
    width: 100%;
    height: 100%;
    background-position: 50% 50%;
    background-size: cover;
  }

  .details {
    position: absolute;
    right: 40px; 
    bottom: 40px;
    padding: 20px;
    padding-left: 24px;
    background-color: rgba(255,255,255,0.85);
    width: 380px;
    border-top: 1px solid #FFF;
    border-bottom: 1px solid #797979;
    color: #000 !important;

    .user {
      float: right;
      margin-left: 8px;
    }
    .pictureView {
      float: right;
      margin-bottom: 8px;
    }
    .title, .subtitle {
      display: block;
    }
    .title {
      font-size: 1.7em;
      font-weight: bold;
      line-height: 1.4em;
    }
    .subtitle {
      font-size: 1.55em;
      line-height: 1.2em;
      margin-top: 0px;
    }
    .url{
      color: #0061ab;
      line-height: 2.4em;
    }

  }
  a:hover .details {
    box-shadow: 0px 0px 15px rgba(255,255,255,0.5);
    .url {
      text-decoration: underline;
    } 
  }

  
}