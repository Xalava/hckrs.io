#hackers {
  .pictureView.route-transition {
    transition: transform 0.6s ease-out;
    transform: scale(1.15);
    opacity: 0;
    ba
    &.activated {
    	opacity: 1;
    	transform: scale(1);
    	transition: 1s;
   	}&.activated:hover {
    	transform: scale(1.15);
    	transition: 1s;
   	}
  }

