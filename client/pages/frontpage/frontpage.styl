@import 'nib'

/* FRONTPAGE */

#frontpage {

  h1, h2 {
    width: 100%;
    float: left;
  }
  h1 {
    color: #FFF;
    margin-bottom: 5px;
    font-size: 60px;
    letter-spacing: 0px;
    font-weight: 100;
    line-height: 140%;
  }
  h2 {
    color: #6D461D;
    font-weight: 400;
    margin-top: 0;
    margin-bottom: 10px;
  }

  text-align: center;
  margin-top: 60px;

  #cursor{
    font-weight: 100;
  }

  #target, .blink{
    color:#FFF;
    font-weight: 700;
  }

  .logo-large{
    height: 140px;
    width: 550px;
    margin: auto;
    margin-bottom: 96px;
    background: url('/img/logo.svg') no-repeat;
    background-size: 100%;
    border-left: 64px solid rgba(0,0,0,0);
  }

  .error {
    padding: 50px;
    a {
      color: inherit;
      text-decoration: underline;
    }
  }

  .frontpage-login{
    height: 100px;
    width: 700px;
    margin: auto;
    margin-bottom: 48px;
    margin-top: 0px;
    padding-left: 140px;
    line-height: 78px;
    vertical-align: top;
    border-left: 24px solid rgba(0,0,0,0);
    clear: both;
  }

  .social-logo{
    height: 78px;
    width: 181px;
    float: left;
    cursor: pointer;
  }

  .social-logo-line{
    border-right: 1px solid white;
  }

  .social-logo:hover{
    background-color: rgba(255,255,255,0.08);
  }

  .social-logo-facebook{
    background: url('/img/social-logo-facebook.svg') center no-repeat;
  }

  .social-logo-twitter{
    background: url('/img/social-logo-twitter.svg') center no-repeat;
  }

  .social-logo-github{
    background: url('/img/social-logo-github.svg') center no-repeat;
  }

  .frontpage-join-us{
      background: url('/img/join-us.svg') center no-repeat;
      height: 78px;
      width: 100px;
      margin-left: 12px;
      margin-top: -24px;
      float: left;
  }

  .frontpage-headline{
    margin-top:32px !important;
    margin-bottom: 12px !important;
    font-size: 48px !important;
  }

  .invited-by-container{

    $speackBubbleBackground = rgba(255,255,255,0.15);

    margin: auto;
    margin-bottom: 40px;
    margin-top: -50px;
    width: 480px; 
    height: 180px;

      .speach-bubble{
        position: relative;
        width: 200px;
        height: 50px;
        padding: 24px;
        background: $speackBubbleBackground;
        color: #FFF;
        margin: auto;
        float: left;
        margin-left: 32px;
        margin-top: 42px;

        .larger{
          font-size: 1.8em;
          font-weight: 400;
          line-height: 32px;
          color:#FFF;
          float: left;
          margin-bottom: 8px;
        }

        .name{
          float: right;
          color: #FFF;
        }
       
      }.speach-bubble:after{

          content: '';
          position: absolute;
          border-style: solid;
          border-width: 15px 17px 15px 0;
          border-color: transparent $speackBubbleBackground;
          display: block;
          width: 0;
          z-index: 1;
          left: -17px;
          top: 34px;

      }
  }

}