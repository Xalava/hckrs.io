@import 'nib'

#places,
#placesMode, {
  width: 100%;
  height: 100%;

  #map {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    margin: 0px;
    border: 0px;
  }

  .leaflet-control-zoom {
    margin: 105px 10px;
    opacity: 0.8;
    background-color: #111;
    padding: 0px;
    border: 0px;
    border-radius: 0px;
  }

  .leaflet-control-zoo:hover {
  }

  .leaflet-container.dark .leaflet-bar a{
    border: 0px;
  }

  .leaflet-container.dark .leaflet-bar a:active, .leaflet-container.dark .leaflet-bar a:hover {
    background-color: #282828;
  }

  .leaflet-bar a{
    border-radius: 0px;
    padding: 0px;
    margin: 0px;
  }

  .filter-ui {
    background: rgba(0,0,0,0.3);
    position: absolute;
    z-index: 10;
    top: 93px;
    right: 0px;
    width: 210px;
    .labels {
      margin: 32px;  
    }
  }
  
  .marker-hacker {
    border-radius: 90px;
    background-color: rgba(255,255,255,0.1);
  }

  .caution-bar {
    display: none;
    width: 100%;
    height: 22px;
    margin-top: 0px;
    background: url(/img/caution-bar.png);
    background-size: cover;

    button {
      float: right;
      border-radius: 0px;
      opacity: 0.9;
    }
  }

  &.edit-mode {
    #map {
      cursor: crosshair;
    }
    .caution-bar {
      display: block;
    }
  }
  
}



#placesEditor {
  position: absolute;
  z-index: 2;
  bottom: 0px;
  right: 0px;

  .form {
    color: #fff;
    background-color: rgba(0,0,0,0.3);
    width: 220px;
    padding: 28px 27px 64px 28px;
    .help-block {
      color: #ee0000; /* error */
    }
    .buttons{
      margin-top: 24px;
      margin-right: 3px;
    }
  }
}