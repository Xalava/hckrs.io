@import 'nib'

#places,
#placesMode, {
  width: 100%;
  height: 100%;

  #map {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    margin: 0px;
    border: 0px;
  }

  .leaflet-control-zoom {
    margin: 100px 10px;
  }

  .filter-ui {
    background: rgba(30,30,30,0.4);
    position: absolute;
    z-index: 100;
    top: 100px;
    right: 10px;
    width: 170px;
    .labels {
      margin: 10px;  
    }
  }
  
  .marker-hacker {
    border-radius: 90px;
    background-color: rgba(255,255,255,0.1);
  }

  .caution-bar {
    display: none;
    width: 100%;
    height: 22px;
    margin-top: 0px;
    background: url(/img/caution-bar.png);
    background-size: cover;
    button {
      float: right;
      border-radius: 0px;
      opacity: 0.9;
    }
  }

  &.edit-mode {
    #map {
      cursor: crosshair;
    }
    .caution-bar {
      display: block;
    }
  }
  
}



#placesEditor {
  position: absolute;
  z-index: 2;
  bottom: 20px;
  left: 20px;

  .form {
    color: black;
    background-color: rgba(255,255,255,0.4);
    width: 400px;
    .help-block {
      color: #ee0000; /* error */
    }
  }
}