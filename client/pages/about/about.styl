/* ABOUT */

#about{

  .container{
    width: 800px;
    margin-top: 250px;

    .before{
      line-height: 3em;
      font-size: 1.5em;
    }

    .before a{
      white-space: nowrap;
    }
    
    .content{

      background-color: rgba(0,0,0,0.55);
      font-size: 1.2em;
      line-height: 1.8em;
      padding: 64px 64px 48px 76px;
      margin: auto;
      
      .paragraph{

      }

    }

  }

}


/* Responsive design */


/* Smartphones (portrait and landscape) ----------- */
@media only screen and (min-device-width : 320px) and (max-device-width : 480px) {
  #about{

    .container{
      width: 95%;
      margin-top: 24px;
      margin-bottom: 24px;

      .content{
        padding: 24px 24px 16px 24px;
        margin: auto;
        

      }

    }

  }

}
