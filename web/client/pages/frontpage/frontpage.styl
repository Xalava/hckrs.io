
@import "nib"

/* FRONTPAGE */

#frontpage {
  width: inherit;
  height: inherit;
  
  /* GENERIC */
  
  .overlay {
    position: fixed;
    z-index: 50;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 0 1px;
    background-attachment: fixed;
    
    &.anim-dropout {
      transition: height 1s ease-in, visibility 0s 1s;
      height: 0%;
      visibility: hidden;
      & > * { 
        transition: opacity 1s;
        opacity: 0; 
      }
    }
  }
  
  .slide {
    min-width: 100%;
    min-height: 100%;
    background-size: cover;
    background-attachment: fixed;
  }
  
  .slide .content-block {
    width: auto;
    margin: 0 auto;
    padding: 100px;
  }
  
  .button {
    border: 1px solid white;
    border-radius: 2px;
    padding: 5px;
    text-align: center;
    text-shadow: 0px 0px 2px rgba(0, 0, 0, 0.2);
    &:hover {
      background-color: rgba(255, 255, 255, 0.2);
      box-shadow: 0px 0px 3px white;
    }
  }
  
  input[type="text"] {
    background-color: transparent;
    border: 0px;
    border-bottom: 1px solid white;
    border-radius: 2px;
    outline: 0;
  }
  


  /* SPECIFIC */

  /* buttons */

  #logo {
    position: fixed;
    z-index: 60;
    top: 20px;
    left: 20px;
    width: 150px;
    display: block;
    img { width: 100%; }
  }
  #enroll-btn {
    position: absolute;
    z-index: 60;
    bottom: 20px;
    right: 20px;
    width: 100px;
    display: block;
    &.fixed {
      position: fixed;
      top: 20px;
      bottom: auto;
    }
  }
  

  /* overlay */

  #welcomeOverlay {
    background-color: #396e8a;
    background-image: url(/img/backgrounds/frontpage-intro-blur.jpg);
    div { 
      position: relative;
      top: 50%;
      transform: translateY(-50%);
      text-align: center;
      font-size: 3em; 
    }
    .logo {
      position: absolute;
    }
  }
  

  /* slides */
  
  #introSlide {
    background-image: url(/img/backgrounds/frontpage-intro.jpg);
    .content-block { 
      width: 600px; 
    }
    #location-block {
      input { 
        width: 100%; 
        font-size: 1.8em; 
      }  
    }
    #enroll-block {
      margin-top: 200px;
      #enroll-btn-large { 
        display: block; 
        font-size: 2.2em; 
        small {
          display: block;
          font-size: 0.5em;
          font-weight: normal;
        } 
      }
      #video-btn-small {
        margin: 50px auto;
        text-align: center;
        display: block;
        img {
          margin: 0 auto;
          width: 50px;
        }
        span {
          margin-top: 4px;
          display: block;
        }
      }
    }
      
  }
  
  #toolsSlide {
    background-image: url(/img/backgrounds/frontpage-tools.jpg);
  }
  
  #videoSlide {
    background-image: url(/img/backgrounds/frontpage-video.jpg);
  }
  
  #manifestoSlide {
    background-image: url(/img/backgrounds/frontpage-manifesto.jpg);
  }
  
  #aboutSlide {
    background-image: url(/img/backgrounds/frontpage-about.jpg);
  }
  
}
